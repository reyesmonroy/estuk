<h1>Dashboard</h1>
<div class="row">
  <div class="col-md-4">
    <h3 class="text-center">My Books <%= link_to 'New Book', new_book_path, class: "btn btn-info pull-right" %></h3>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Availiable</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.id %></td>
            <td><%= link_to book.name, book_path(book) %></td>
            <td><%= book.availability ? "Yes" : "No" %></td>
            <td><%= link_to "edit", edit_book_path(book), class: "btn btn-info btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">Purchased</h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">Sales</h3>
  </div>
</div>
