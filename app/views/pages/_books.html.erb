<table class="table table-condensed">
<thead>
<tr>
  <th>Id</th>
  <th>Name</th>
  <th>Availiable</th>
  <th></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= link_to book.name, book_path(book) %></td>
    <td><%= book.availability ? "Yes" : "No" %></td>
    <td><%= link_to "edit", edit_book_path(book), class: "btn btn-info btn-xs" %></td>
  </tr>
<% end %>
</tbody>
</table>

